
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form action="" method="post">
    <input type="hidden" name="Pid" value="@Model.Pid" />
    <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Name" />
    <input type="text" name="Price" value="@Model.Price" class="form-control" placeholder="Price" />
    <input type="text" name="Cid" value="@Model.Cid" class="form-control" placeholder="Cid" />
    <input type="submit" value="Save" />
</form>

